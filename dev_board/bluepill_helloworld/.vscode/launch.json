{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "STlink launch",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/bluepill_helloworld.elf",
      "request": "launch",
      "type": "cortex-debug",
      "servertype": "stutil",
      "device": "STM32F407VG",
      "interface": "swd",
      "runToMain": true, // else it starts at reset handler - not interested
      "preLaunchTask": "Build all", // configured in tasks.json
      // "preLaunchCommands": ["Build all"], // you can execute command instead of task
      "svdFile": "", // Include svd to watch device peripherals
      "swoConfig": {} // currently (v1.7.0) not supported
    },
    {
      "name": "STlink attach",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/bluepill_helloworld.elf",
      "request": "attach",
      "type": "cortex-debug",
      "servertype": "stutil",
      "device": "STM32F407VG",
      "interface": "swd",
      "runToMain": true, // else it starts at reset handler - not interested
      "preLaunchTask": "Build all", // configured in tasks.json
      // "preLaunchCommands": ["Build all"], // you can execute command instead of task
      "svdFile": "", // Include svd to watch device peripherals
      "swoConfig": {} // currently (v1.7.0) not supported
    }
  ]
}
